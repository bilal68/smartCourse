# AI Service Environment Variables
# Copy this file to .env and update with your local values

# Database Configuration (Separate AI database)
DATABASE_URL=postgresql://smartcourse:password@127.0.0.1:5432/smartcourse_ai

# Kafka Configuration (Local development)
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_GROUP_ID=ai-service-group
KAFKA_COURSE_TOPIC=courses
KAFKA_AI_TOPIC=ai

# OpenAI Configuration (Required for RAG - get from https://platform.openai.com/api-keys)
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
OPENAI_EMBEDDING_DIMENSION=1536
OPENAI_CHAT_MODEL=gpt-3.5-turbo
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=500

# Content Chunking Configuration
CHUNK_SIZE=1000
CHUNK_OVERLAP=100

# Retrieval Configuration (RAG)
RETRIEVAL_TOP_K=5
SIMILARITY_THRESHOLD=0.3

# Batch Processing
EMBEDDING_BATCH_SIZE=100

# S3 Configuration (Dummy for local development)
USE_DUMMY_S3=true
AWS_ACCESS_KEY_ID=dummy-key-id
AWS_SECRET_ACCESS_KEY=dummy-secret-key
AWS_S3_BUCKET=smartcourse-dev
AWS_REGION=us-east-1
S3_STORAGE_PATH=./storage/s3

# Service Information
SERVICE_NAME=ai-service
SERVICE_VERSION=1.0.0

# Logging
LOG_LEVEL=INFO
