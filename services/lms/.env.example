# LMS Service Environment Variables
# Copy this file to .env.local and update with your local values

# Database (Local development should point to smartcourse_lms)
DATABASE_URL=postgresql://smartcourse:password@127.0.0.1:5432/smartcourse_lms
SQLALCHEMY_ECHO=false

# Redis (Local development)
REDIS_URL=redis://127.0.0.1:6379/0

# RabbitMQ (Local development)
RABBITMQ_URL=amqp://guest:guest@127.0.0.1:5672//

# Kafka (Local development)
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC=course.events

# JWT (Change in production!)
JWT_SECRET_KEY=your-super-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Temporal (Workflow engine)
TEMPORAL_HOST=localhost:7233

# AI Service Integration
AI_SERVICE_URL=http://localhost:8001

# S3 Configuration (Dummy S3 for local development)
USE_DUMMY_S3=true
AWS_ACCESS_KEY_ID=dummy-key-id
AWS_SECRET_ACCESS_KEY=dummy-secret-key
AWS_S3_BUCKET=smartcourse-dev
AWS_REGION=us-east-1
S3_STORAGE_PATH=./storage/s3

# Logging
LOG_LEVEL=INFO# Service Info
SERVICE_NAME=lms-service
SERVICE_VERSION=1.0.0
