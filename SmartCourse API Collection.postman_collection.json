							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"email\": \"{{instructor_email}}\",\n    \"full_name\": \"{{instructor_name}}\",\n    \"password\": \"{{instructor_password}}\"\n}"
						},
						"url": {
							"raw": "{{lms_base_url}}/api/v1/auth/register",
							"host": [
								"{{lms_base_url}}"
							],
							"path": [
