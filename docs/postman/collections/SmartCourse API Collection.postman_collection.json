    {
      "name": "Asset Content (S3 JSON Upload Flow)",
      "item": [
        {
          "name": "Initiate ARTICLE Content Upload (Signed PUT URL)",
          "event": [
            {
              "listen": "test",
              "script": {
                "id": "7713f9d4-e489-4492-b0b8-b41c8ef060e0",
                "exec": [
                  "// Store signed PUT URL for subsequent PUT request",
                  "if (pm.response.code >= 200 && pm.response.code < 300) {",
                  "  const r = pm.response.json();",
                  "  const url = r.upload_url || r.url || r.signed_put_url;",
                  "  if (url) {",
                  "    pm.environment.set('signed_put_url', url);",
                  "    console.log('signed_put_url stored');",
                  "  } else {",
                  "    console.warn('No upload_url found in response');",
                  "  }",
                  "}"
                ],
                "type": "text/javascript",
                "packages": {},
                "requests": {}
              }
            }
          ],
          "id": "cb4a0c27-cefc-462b-8815-0ef25590efbe",
          "request": {
            "auth": {
