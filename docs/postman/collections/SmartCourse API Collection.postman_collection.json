        {
          "name": "PUT content.json to Signed URL (S3 Direct Upload)",
          "id": "02a34e3a-f0ef-4780-9114-3852e74652da",
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "PUT",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\r\n    \"schema\": \"smartcourse.editor.v1\",\r\n    \"doc\": {\r\n        \"type\": \"doc\",\r\n        \"content\": [\r\n            {\r\n                \"type\": \"heading\",\r\n                \"attrs\": {\r\n                    \"level\": 1\r\n                },\r\n                \"content\": [\r\n                    {\r\n                        \"type\": \"text\",\r\n                        \"text\": \"Lesson Title\"\r\n                    }\r\n                ]\r\n            },\r\n            {\r\n                \"type\": \"paragraph\",\r\n                \"content\": [\r\n                    {\r\n                        \"type\": \"text\",\r\n                        \"text\": \"This is a sample lesson body for testing upload + RAG.\"\r\n                    }\r\n                ]\r\n            },\r\n            {\r\n                \"type\": \"heading\",\r\n                \"attrs\": {\r\n                    \"level\": 2\r\n                },\r\n                \"content\": [\r\n                    {\r\n                        \"type\": \"text\",\r\n                        \"text\": \"Section 1\"\r\n                    }\r\n                ]\r\n            },\r\n            {\r\n                \"type\": \"paragraph\",\r\n                \"content\": [\r\n                    {\r\n                        \"type\": \"text\",\r\n                        \"text\": \"Explain a concept here. Add enough text so chunking works.\"\r\n                    }\r\n                ]\r\n            },\r\n            {\r\n                \"type\": \"bulletList\",\r\n                \"content\": [\r\n                    {\r\n                        \"type\": \"listItem\",\r\n                        \"content\": [\r\n                            {\r\n                                \"type\": \"paragraph\",\r\n                                \"content\": [\r\n                                    {\r\n                                        \"type\": \"text\",\r\n                                        \"text\": \"Point A\"\r\n                                    }\r\n                                ]\r\n                            }\r\n                        ]\r\n                    },\r\n                    {\r\n                        \"type\": \"listItem\",\r\n                        \"content\": [\r\n                            {\r\n                                \"type\": \"paragraph\",\r\n                                \"content\": [\r\n                                    {\r\n                                        \"type\": \"text\",\r\n                                        \"text\": \"Point B\"\r\n                                    }\r\n                                ]\r\n                            }\r\n                        ]\r\n                    }\r\n                ]\r\n            },\r\n            {\r\n                \"type\": \"codeBlock\",\r\n                \"attrs\": {\r\n                    \"language\": \"python\"\r\n                },\r\n                \"content\": [\r\n                    {\r\n                        \"type\": \"text\",\r\n                        \"text\": \"print('hello')\"\r\n                    }\r\n                ]\r\n            }\r\n        ]\r\n    }\r\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
